# ------------------------------------------------------------------------------
# FILE:        .editorconfig
# VERSION:     3.6.7
# DESCRIPTION: EditorConfig for Dotfiles Framework (Bash/Shell/YAML focused)
# AUTHOR:      Stony64
# CHANGES:     v3.6.7 - Remove Python/Docker/JS (not in framework scope)
# ------------------------------------------------------------------------------

root = true

# --- GLOBAL UNIX STANDARDS ----------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# --- MAKEFILES (SACRED TABS!) -------------------------------------------------
[{Makefile,makefile,*.mk,*.mak,GNUmakefile}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = false

# --- BASH/SHELL FRAMEWORK (4 SPACES) ------------------------------------------
[*.{sh,bash,zsh,fish}]
indent_style = space
indent_size = 4

# Dotfiles Framework Core
[{dotfilesctl.sh,core.sh,collect-review.sh}]
indent_style = space
indent_size = 4

# Bash Library Modules
[lib/*.sh]
indent_style = space
indent_size = 4

# Sourced Dotfiles (no shebang)
[{.bashrc,.bashenv,.bashprompt,.bashaliases,.bashfunctions,.bashwartung,.bash_profile,.bash_logout}]
indent_style = space
indent_size = 4

# Shell Config Files
[{.dircolors,.nanorc,.shellcheckrc}]
indent_style = space
indent_size = 4

# --- MARKDOWN (FREE FORM) -----------------------------------------------------
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# --- JSON/YAML (2 SPACES STANDARD) --------------------------------------------
[*.{json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# --- TOML (2 SPACES) ----------------------------------------------------------
[*.toml]
indent_style = space
indent_size = 2

# --- WINDOWS FILES (CRLF) -----------------------------------------------------
[*.{bat,cmd,ps1,psm1}]
end_of_line = crlf
indent_style = space
indent_size = 4

# --- PROXMOX/SYSTEM CONFIGS ---------------------------------------------------
[{*.pve,*.conf,*.cfg,mc/ini}]
indent_style = space
indent_size = 4
max_line_length = off

# --- ZFS/STORAGE CONFIGS ------------------------------------------------------
[{*.zfs,*.pool}]
indent_style = space
indent_size = 4

# --- LINTER CONFIGS -----------------------------------------------------------
[{.markdownlint*,.shellcheckrc,.editorconfig,.gitignore,.gitattributes}]
indent_style = space
indent_size = 4
max_line_length = off

# --- GITHUB ACTIONS -----------------------------------------------------------
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# --- GIT CONFIGS --------------------------------------------------------------
[{.gitconfig,.gitmodules}]
indent_style = tab
indent_size = 8
